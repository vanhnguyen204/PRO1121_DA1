<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#DBFDFF"
    android:layout_marginTop="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/tv_nameUer_itemDetailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên: Bùi Văn Đoàn"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/tv_birthDay_itemDetailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: 2001/12/01"
            android:layout_below="@+id/tv_nameUer_itemDetailUser"
            />
        <TextView
            android:id="@+id/tv_addRess_itemDetailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Hà Nội"
            android:layout_below="@+id/tv_birthDay_itemDetailUser"
            />
        <TextView
            android:id="@+id/tv_showDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:layout_below="@+id/tv_addRess_itemDetailUser"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>