<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentOrderDrink">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/arrow_left"
        android:id="@+id/img_back_fragmentOrderDrink"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Quay lại"
        android:textSize="19sp"
        android:layout_toRightOf="@+id/img_back_fragmentOrderDrink"
        />
<EditText
    android:layout_width="match_parent"
    android:hint="Nhập tên đồ uống"
    android:layout_below="@+id/img_back_fragmentOrderDrink"
    android:id="@+id/edt_search_orderDrink"
    android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView_orderDrink"
        android:layout_below="@+id/edt_search_orderDrink"
        />
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/btnConfirmSelectOrder"
    android:text="Xác nhận"
    android:background="@drawable/custom_button_login"
    />
</RelativeLayout>