<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"

    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/green"
        >
        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/tv_dayWork_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Ngày làm việc: 2030/12/10"
            />
        <TextView
            android:id="@+id/tv_shiftWork_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca làm việc: Ca sáng"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@+id/tv_dayWork_item"
            />
        <TextView
            android:id="@+id/tv_showdetail_calendarwork_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"

            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>