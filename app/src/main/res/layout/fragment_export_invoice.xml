<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Fragment.FragmentExportInvoice">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/arrow_left"
            android:id="@+id/img_back_fragmentExport"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Xuất hoá đơn"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_invoiceID_fragmentExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mã hoá đơn: HD1997"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_nameStaff_fragmentExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Nhân viên: Nguyễn Văn A"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_drink_fragmentExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Đồ uống: Trà sữa, trà đào..."
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_table_fragmentExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Bàn: TB222"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_totalBill_fragmentExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Tổng tiền: 90000 VNĐ"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_dateCreate_fragmentExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Ngày tạo: 24-12-2024"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm thông tin khách hàng"
                android:textSize="18sp"

                />
            <ImageView
                android:id="@+id/img_addCustomer_fragmentExport"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/plus_android"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button_login"
            android:text="Xuất"
            android:textColor="@color/white"

            />
</LinearLayout>