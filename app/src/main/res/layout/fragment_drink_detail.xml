<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    tools:context=".Fragment.FragmentDrinkDetail">

    <ImageView
        android:id="@+id/img_back_fragmentDrinkDetail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/arrow_left" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:text="Thông tin đồ uống"
    android:gravity="center"
    android:textSize="28dp"
    android:layout_below="@+id/img_back_fragmentDrinkDetail"
    android:id="@+id/title_drinkDetail"
    />
    <RelativeLayout
        android:id="@+id/layout_left_fragmentDrinkDetail"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/title_drinkDetail"
        android:background="@drawable/shadow_layout"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_drinkDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/juice_watermelon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_right_fragmentDrinkDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_left_fragmentDrinkDetail"
        android:layout_marginTop="10dp"

        android:background="@drawable/shadow_layout_2"
        android:orientation="vertical"
        android:padding="20dp"


        >

        <TextView
            android:id="@+id/tv_drinkID_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đồ uống"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_nameDrink_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tên đồ uống"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ingredientID_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Nguyên liệu" />

        <TextView
            android:id="@+id/tv_voucherID_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Nguyên liệu" />


        <TextView
            android:id="@+id/tv_typeOfDrink_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Tên đồ uống" />

        <TextView
            android:id="@+id/tv_dateAdd_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Ngày thêm(ngày nhập):" />

        <TextView
            android:id="@+id/tv_dateExpiry_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Ngày hết hạn" />

        <TextView
            android:id="@+id/tv_price_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Giá: " />

        <TextView
            android:id="@+id/tv_quantity_fragmentDrinkDeTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Số lượng: " />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDeleteDrink_fragmentDrinkDetail"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_right_fragmentDrinkDetail"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button_login"
        android:text="Xoá"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdateDrink_fragmentDrinkDetail"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_right_fragmentDrinkDetail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btnDeleteDrink_fragmentDrinkDetail"
        android:background="@drawable/custom_button_login"
        android:text="Chỉnh sửa"
        android:textColor="@color/white"

        android:textSize="10sp"

        />


</RelativeLayout>