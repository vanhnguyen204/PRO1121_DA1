<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FragmentShowDetailCalendar"
    android:padding="8dp">
    <ImageView
        android:id="@+id/img_back_frameCalenDarWork"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/arrow_left"
        android:layout_alignParentTop="true"

        />
    <TextView
        android:id="@+id/tv_title_showDitail_CalenDarWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi Tiết Lịch Làm Việc"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_below="@+id/img_back_frameCalenDarWork"
        />
    <TextView
        android:id="@+id/like"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="------------------------------------------"
        android:textSize="30dp"
        android:layout_below="@+id/tv_title_showDitail_CalenDarWork"
        />
    <TextView

        android:id="@+id/tv_shift_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ca làm hiện tại: sáng"
        android:layout_below="@+id/like"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_showDetailCalenderWorkForShiff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shift_work"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_showdetail_calenderforork"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_staffForShowDetail_CalendarWork"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/plus_android"
        android:layout_above="@+id/btn_delete_staffForShowDetail_CalendarWork"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_delete_staffForShowDetail_CalendarWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:background="@drawable/custom_buttonadd_drink"
        android:layout_alignParentBottom="true"
        />



</RelativeLayout>