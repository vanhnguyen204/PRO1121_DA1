<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:padding="15dp"
        android:background="#f2f2f2"
        >

        <TextView
            android:id="@+id/tv_nameDrink_top5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Tên: Trà đào cam xả"

            android:textSize="16sp" />
        <ImageView
            android:id="@+id/img_drink_top5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/tv_nameDrink_top5"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/soju" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã bán: 20"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_quantityTopDrink"
            android:layout_below="@+id/img_drink_top5"
            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>