<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Fragment.FragmentTable">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/img_drink_order"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/wine" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_orderDrinkGoOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/img_drink_order"
        android:background="@drawable/custom_buttonadd_drink"

        android:text="Đồ uống mang về" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_fragmentTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_orderDrinkGoOut" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_addTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:src="@mipmap/plus_android" />
</RelativeLayout>