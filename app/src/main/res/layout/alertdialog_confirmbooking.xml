<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/style_bottomsheet_dialog"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:id="@+id/tv_title_booking"
        android:text="Xác nhận đặt bàn"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edt_nameCustomer_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tv_title_booking"
        android:background="@drawable/border_edt"
        android:hint="Nhập tên khách hàng"
        android:padding="17dp" />

    <EditText
        android:id="@+id/edt_phoneNumber__booking"
        android:layout_width="match_parent"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_nameCustomer_booking"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_edt"
        android:hint="Nhập SĐT khách hàng"
        android:padding="17dp" />

    <EditText
        android:id="@+id/edt_date_booking"
        android:layout_width="wrap_content"
        android:layout_below="@+id/edt_phoneNumber__booking"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_toLeftOf="@+id/edt_hours_booking"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border_edt"
        android:hint="Chọn ngày đặt"
        android:padding="17dp" />

    <EditText
        android:id="@+id/edt_hours_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edt_phoneNumber__booking"
        android:layout_marginBottom="10dp"
        android:inputType="datetime"
        android:background="@drawable/border_edt"
        android:hint="Chọn giờ đặt"
        android:padding="17dp" />

    <EditText
        android:id="@+id/edt_passWordStaff_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/edt_hours_booking"
        android:background="@drawable/border_edt"
        android:hint="Nhập mật khẩu của bạn"
        android:padding="17dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmBooking_part2"
        android:layout_width="match_parent"
    android:layout_below="@+id/edt_passWordStaff_booking"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_buttonadd_drink"
        android:text="Confirm"
        android:textColor="@color/green" />
</RelativeLayout>