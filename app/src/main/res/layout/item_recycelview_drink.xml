<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    android:layout_margin="10dp"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_drink"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/drink" />

        <TextView
            android:id="@+id/tv_name_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_drink"
            android:text="Tên: Cà phê" />

        <TextView
            android:id="@+id/tv_price_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_drink"
            android:text="Giá: 100.000 VND" />

        <TextView
            android:id="@+id/tv_seeDetail_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price_drink"
            android:text="Xem chi tiết" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>