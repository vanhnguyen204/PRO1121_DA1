<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:background="@drawable/border_item_showdetail_calenderfowork"
        >
        <TextView
            android:id="@+id/tv_staffID_item_showDetailCalendarWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MSNV: 123"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/tv_name_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Nhân Viên: Nguyễn Văn A"
            android:layout_below="@+id/tv_staffID_item_showDetailCalendarWork"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>