<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#D1E8DB"

        >
        <TextView
            android:id="@+id/tv_staffID_item_showDetailCalendarWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MSNV: 123"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/tv_name_staff"
            android:layout_width="match_parent"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="Tên Nhân Viên: Nguyễn Văn A"
            android:layout_below="@+id/tv_staffID_item_showDetailCalendarWork"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>