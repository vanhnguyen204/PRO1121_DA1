<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/border_edt"
    android:padding="10dp"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@mipmap/lemons"
    android:id="@+id/img_recyclerViewIngredient_drink"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng 0.2 kg"
        android:id="@+id/tv_quantity_recyclerview"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/img_recyclerViewIngredient_drink"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Lemon"
        android:id="@+id/tv_nameIngredient_recyclerView"

        />
</RelativeLayout>