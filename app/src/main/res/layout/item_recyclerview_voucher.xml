<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="#DBFDFF"
    android:layout_marginTop="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price_reduce_itemVoucher"
            android:text="giảm giá: 20%"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_date_expiry_itemVoucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày hết hạn:12/12/2012"
            android:layout_below="@+id/tv_price_reduce_itemVoucher"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>